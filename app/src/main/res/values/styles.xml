<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeAuthorization" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimaryDark">@color/white_blue_authorization</item>
        <item name="colorPrimary">@color/white_blue_authorization</item>
        <item name="colorAccent">@color/white_gray_authorization</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppThemeRegistration" parent="Theme.AppCompat.NoActionBar">
